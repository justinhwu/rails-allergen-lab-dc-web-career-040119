<h1> <%= @user.name %>'s Profile </h1>
<h3> <%= @user.name %> is allergic to: </h3>

<ul>
  <% @user.ingredients.each do |allergen| %>
    <li><%= link_to allergen.name, ingredient_path(allergen) %></li><br>
  <% end %>
<ul>

<%= link_to "Go back to the homepage", users_path%><br>
<%= link_to "Edit user details", edit_user_path(@user)%><br>

<div class="delete-button">
<%= form_tag user_path(@user), method: "delete" do%>
  <%= submit_tag "Delete this user"%>
<% end %>
</div>
