
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%><br>


  <div class="existing-ingredients form-box">
  <label> Select your allergen from existing ingredients</label><br>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
  </div>

  <div class="new-ingredient form-box">
  <label>Create a new ingredient</label><br>
  <%= f.fields_for :ingredients do |i_f|%>
    <%= i_f.label "Ingredient Name:"%>
    <%= i_f.text_field :name %><br>
  <% end %>
  </div>

  <%= f.submit %>
<% end %>
